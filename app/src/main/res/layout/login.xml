<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B8B1B1"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="111dp"
        android:layout_marginTop="200dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <EditText
        android:id="@+id/editNomeID"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="32dp"
        android:background="@android:color/background_light"
        android:ems="10"
        android:hint="UsuÃ¡rio"
        android:inputType="textPersonName"
        android:paddingLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_editor_absoluteX="55dp" />

    <EditText
        android:id="@+id/editSenhaID"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="40dp"
        android:background="#EAE2E3"
        android:ems="10"
        android:hint="Senha"
        android:inputType="numberPassword"
        android:paddingLeft="15dp"
        app:layout_constraintTop_toBottomOf="@+id/editNomeID"
        tools:layout_editor_absoluteX="55dp" />

    <Button
        android:id="@+id/btnEntrarID"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp"
        android:background="#8BC34A"
        android:text="ENTRAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editSenhaID"
        app:layout_constraintVertical_bias="0.247"
        tools:layout_editor_absoluteX="55dp"
        android:onClick="Logar"/>


</LinearLayout>